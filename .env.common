# Common Environment Variables
# These settings are shared across all environments (development, production, staging)
# DO NOT put sensitive secrets here - use environment-specific files

# Database Connection Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true

# Scraping URLs
BASE_URL=https://www.gcsurplus.ca
LISTING_URL=https://www.gcsurplus.ca/mn-eng.cfm?snc=wfsav&sc=ach-shop&sr=1&vndsld=0&lci=&sf=aff-post&so=DESC
BID_API_URL=https://www.gcsurplus.ca/whatsforsale/Bid/Bid.cfc

# GSA API Configuration
GSA_API_BASE_URL=https://api.gsa.gov/assets/gsaauctions/v2

# Treasury.gov Configuration
TREASURY_BASE_URL=https://www.treasury.gov/auctions/treasury/rp
TREASURY_LISTING_URL=https://www.treasury.gov/auctions/treasury/rp/realprop.shtml

# Request Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Scheduler Configuration
SCHEDULER_TIMEZONE=UTC

# Scraper Intervals (in hours)
# Note: These are defaults, can be overridden in environment-specific files
SCRAPER_INTERVAL_GCSURPLUS=24
SCRAPER_INTERVAL_GSA=12
SCRAPER_INTERVAL_TREASURY=48
SCRAPER_INTERVAL_STATE_DEPT=24
