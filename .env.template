# SECURITY
# ============================================
# Secret for authenticating cron jobs
# Generate with: openssl rand -hex 32
CRON_SECRET=your-random-secret-string-here

# ============================================
# API SETTINGS
# ============================================
# Port for FastAPI server
API_PORT=8001

# Host (0.0.0.0 allows external connections)
API_HOST=0.0.0.0

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================
# SCRAPING SETTINGS
# ============================================
# How often to scrape (in hours)
SCRAPE_INTERVAL_HOURS=1

# Delete closed auctions immediately to save space
# Set to true for free tier databases
DELETE_CLOSED_IMMEDIATELY=true

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Max retries for failed requests
MAX_RETRIES=3

