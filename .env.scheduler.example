"""
Example .env file for scheduler configuration.

Copy this to .env and customize as needed.
"""

# === Database ===
DATABASE_URL=sqlite:///./auction_data.db
# Or for PostgreSQL/Neon:
# DATABASE_URL=postgresql://user:password@host:port/dbname

# === Scheduler Configuration ===

# Enable or disable the scheduler
SCHEDULER_ENABLED=true

# Timezone for scheduling (see https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
# Common examples:
#   UTC - Coordinated Universal Time
#   America/New_York - Eastern Time
#   America/Los_Angeles - Pacific Time
#   America/Chicago - Central Time
#   Europe/London - GMT/BST
#   Europe/Paris - CET/CEST
#   Asia/Tokyo - JST
#   Australia/Sydney - AEDT/AEST
SCHEDULER_TIMEZONE=UTC

# === Site-Specific Intervals (in hours) ===
# How often each site should be scraped
# These can also be set in config.py

# GCSurplus (Canadian government surplus auctions)
# Typical: 24 (daily), Min recommended: 12 (safety margin for API)
SCRAPER_INTERVALS_GCSURPLUS=24

# GSA (US federal property auctions - more active)
# Typical: 12 (twice daily), Min recommended: 6 (frequent updates)
SCRAPER_INTERVALS_GSA=12

# Treasury (US seized real estate - less frequent updates)
# Typical: 48 (every 2 days), Min recommended: 24 (daily check)
SCRAPER_INTERVALS_TREASURY=48

# === Alternative: Schedule by Specific Times ===
# Instead of intervals, specify exact times (HH:MM format)
# Use format: "HH:MM" or "HH:MM,HH:MM" for multiple times per day
# 
# Examples:
#   "02:00"           → Daily at 2:00 AM
#   "01:00,13:00"     → Daily at 1:00 AM and 1:00 PM
#   "00:00,06:00,12:00,18:00"  → Every 6 hours

# Uncomment and customize if you want to use specific times instead of intervals:
# SCRAPER_SCHEDULE_TIMES_GCSURPLUS=02:00
# SCRAPER_SCHEDULE_TIMES_GSA=01:00,13:00
# SCRAPER_SCHEDULE_TIMES_TREASURY=03:00

# === Other Configuration ===

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# API host and port
API_HOST=0.0.0.0
API_PORT=8001

# Database connection pool (for PostgreSQL/Neon)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true

# Request settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Delete closed auctions immediately (for free tier storage limit)
DELETE_CLOSED_IMMEDIATELY=true

