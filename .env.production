# Production Environment Variables
# These settings are used when ENVIRONMENT=production
# IMPORTANT: Override these with actual production values in your hosting environment

ENVIRONMENT=production
DEBUG=false

# Database - Use PostgreSQL (Neon) for production
# IMPORTANT: Set this in your hosting environment (Railway, Render, etc.)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# API Configuration
API_PORT=8001
API_HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO

# Frontend URL (for CORS)
# IMPORTANT: Set this to your actual production frontend URL
FRONTEND_URL=https://your-app.vercel.app

# Scheduler Settings
SCHEDULER_ENABLED=true
RUN_INITIAL_SCRAPE=true

# Cleanup - Keep database small for free tier
DELETE_CLOSED_IMMEDIATELY=true

# GSA API Key
# IMPORTANT: Set this in your hosting environment
GSA_API_KEY=your_production_gsa_api_key

# Security
# IMPORTANT: Set these in your hosting environment with strong random values
API_KEY=your_production_api_key
SECRET_KEY=your_production_secret_key_min_32_chars
